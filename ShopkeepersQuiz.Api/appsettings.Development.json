{
  "ScraperSettings": {
    "RunEvery": "*/30 * * * *"
  },
  "ConnectionStrings": {
    "ApplicationDatabase": "Server=.\\SQLEXPRESS;Database=ShopkeepersQuiz;Trusted_Connection=True;",
    "MongoDb": "mongodb://mongoadmin:secret@localhost:27017/shopkeepers-quiz?authSource=admin&readPreference=primary&ssl=false"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.log",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
